<% layout("/layouts/boilerplat") %>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
  const listing = <%-JSON.stringify(listing)%>;
</script>
<div class="row mt-3">
  <div class="col-12 offset-lg-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-lg-6 offset-lg-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_img" />
    <div class="card-body">
      <div>
        <p class="card-text">
          <b>Owned by:</b><i> <%= listing.owner.username %> </i>
        </p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>
  </div>
  <br />
  <%if(!currUser){%>
  <h4 class="col-lg-6 col-12 offset-lg-3" style="color: #fe424d;">
    Please log in to use our website's features.
  </h4>
  <%}else if(currUser && !listing.owner._id.equals(currUser._id) &&
  isReserved==true){%>
  <h4 class="col-lg-6 col-12 offset-lg-3" style="color: #fe424d;">This Propert Was Already Booked</h4>

  <p class="col-lg-6 col-12 offset-lg-3">
    You can book after
    <b><%=reserve.checkout.toString().split(" ").slice(1,4).join(" -")%></b>
  </p>

  <% }else if(currUser._id.equals(listing.owner._id)){ %>

      <div class="col-4 offset-lg-3">
      <div class="btns">
        <a
          href="/listings/<%=listing._id%>/edit"
          class="btn btn-dark edit-btn w-lg-50"
          >Edit</a>
        <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
          <button type="submit" class="btn btn-dark offset-5">Delete</button>
        </form>
      </div>
      </div>

      <%} else if(currUser && !listing.owner._id.equals(currUser._id)){ %>

      <div class="col-lg-2 col-md-3 col-5 offset-lg-3">   
      <div class="btns">
        <a
          href="/listings/<%= listing._id%>/reserve"
          class="btn btn-dark w-100 edit-btn"
          >Book Now</a>
      </div>
      </div>

      <% } %>
    
  </div>
   <!-- Leave a Review -->
  <div class="col-lg-8 col-12 offset-lg-3 mb-3">
    <hr />
     <% if(currUser && !listing.owner._id.equals(currUser._id)) {%>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%=listing.id%>/reviews"
      method="POST"
      novalidate
      class="needs-validation">

      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          id="comment"
          name="review[comment]"
          cols="30"
          rows="5"
          class="form-control"
          required></textarea>
        <div class="valid-feedback">looks good!</div>
        <div class="invalid-feedback">Please add some comments for review!</div>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <%}%>


    <%if(listing.reviews.length>0){%>
    <div class="row">
      <p><b>All Reviews</b></p>
      <% for(review of listing.reviews){%>
      <div class="card col-lg-4 col-md-5 col-11 mb-3 mx-3">
        <div class="card-body my-3">
          <h5 class="card-title">@<%=review.author.username%></h5>
          <p class="card-text"><%=review.comment%></p>
          <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
          <%if(currUser && currUser._id.equals(review.author._id)) {%>
          <form
            method="POST"
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
            class="mb-3">
            <button type="submit" class="btn btn-dark">Delete</button>
          </form>
          <%}%>
        </div>
      </div>
      <%}%>
    </div>
    <%}%>

  </div>
  <div class="col-lg-6 col-12 offset-lg-3 mb-3">
      <h3>Where you'll be</h3>
      <div id="map" class="w-100"></div>
    </div>
  </div>


<script src="/js/map.js"></script>
